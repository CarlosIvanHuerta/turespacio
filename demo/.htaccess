RewriteEngine On
RewriteBase /

# Reescribir slugs conocidos a sus archivos .php
RewriteRule ^(index|el-mundo|mexico|que-hacer|tips-de-viaje|contacto)/?$ $1.php [L]

# Si existe un archivo o carpeta física, no hacer nada
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Todo lo demás a post.php
RewriteRule ^([a-zA-Z0-9\-]+)/?$ post.php?slug=$1 [L,QSA]
